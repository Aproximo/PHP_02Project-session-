

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>{% set _block = block('title') %}
        {% if _block is not empty %}
            {{ _block|raw }}
            {% else %}
            Organic Standard
        {% endif %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('/bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('/bundles/app/css/style.css') }}" rel="stylesheet">
</head>

<body>

<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#">Organic Standard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">



            <li class="nav-item {% if app.request.attributes.get('_route') starts with 'home' %} active {% endif %}">
                <a class="nav-link" href="{{ path('homepage') }}">Home </a>
            </li>

            <li class="nav-item {% if app.request.attributes.get('_route') starts with 'article' %} active {% endif %}">
                <a class="nav-link" href="{{ path('article') }}">Articles </a>
            </li>

            <div class="form-inline my-2 my-sm-0">
                {% if is_granted('ROLE_USER') %}

                    <p class="nav-item {% if app.request.attributes.get('_route') starts with 'security' %} active {% endif %}">
                        <a class="nav-link" href="{{ path('security_session_close') }}">Logout ({{ app.user.username }})</a>
                    </p>

                {% else %}

                    <p class="nav-item {% if app.request.attributes.get('_route') starts with 'security' %} active {% endif %}">
                        <a class="nav-link" href="{{ path('user_login') }}">Login</a>
                    </p>
                    </p>

                {% endif %}
            </div>






        </ul>

    </div>
</nav>


    {% block body %} {% endblock %}

</main><!-- /.container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src={{ asset('/bundles/app/js/bootstrap.min.js') }}></script>
<script src="{{ asset('/bundles/app/js/jquery.min.css') }}"></script>
<script src="{{ asset('bundles/app/js/scripts.js') }}"></script>

</body>
</html>
